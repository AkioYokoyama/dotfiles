[user]
	email = a-yokoyama@stylagy.co.jp
	name = Yokoyama Akio
[core]
    editor = vim
[color]
    ui = true
[alias]
    a     = add
    b     = branch
    co    = checkout
    cm    = commit
    cmm   = commit -m
    di    = diff
    distg = diff --cached
    predi = diff HEAD^ HEAD
    din   = diff --name-only
    diw   = diff --color-words
    fo    = fetch origin
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    lo    = log --oneline
    lo5   = log --oneline -5
    lo10  = log --oneline -10
    st    = status
[fetch]
	prune = true
